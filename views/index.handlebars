<h1>Burgers!</h1>

<h2>Burgers not eaten!</h2>

<ul class="notEaten">
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2 class="headEaten">Burgers Devoured!</h2>

<ul class="eaten">
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<div class ="addBurger">
<h2>Add a burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">
  <input type="hidden" name="devoured" value="0">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">

  </div>

  <button type="submit">Add burger</button>
</form>
</div>